<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<androidx.core.widget.NestedScrollView
		android:id="@+id/vscroll_bg"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:id="@+id/linear_bg"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<androidx.cardview.widget.CardView
				android:id="@+id/cardview_alarm_display"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="12dp"
				app:cardElevation="0dp"
				app:cardCornerRadius="10dp">
				<TimePicker
					android:id="@+id/timepicker"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="?colorSurfaceVariant" />
			</androidx.cardview.widget.CardView>
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="vertical">
				<EditText
					android:id="@+id/edittext_title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="12dp"
					android:layout_marginBottom="5dp"
					android:padding="8dp"
					android:background="#EFEBE9"
					android:gravity="center_horizontal"
					android:textSize="16sp"
					android:textColor="#000000"
					android:hint="Azan Alarm Title"
					android:textColorHint="#607D8B" />
				<EditText
					android:id="@+id/edittext_description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="12dp"
					android:layout_marginBottom="5dp"
					android:padding="8dp"
					android:background="#EFEBE9"
					android:gravity="center_horizontal"
					android:textSize="16sp"
					android:textColor="#000000"
					android:hint="Azan Alarm Description"
					android:textColorHint="#607D8B" />
				<EditText
					android:id="@+id/edittext_code"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="12dp"
					android:padding="8dp"
					android:background="#EFEBE9"
					android:gravity="center_horizontal"
					android:textSize="16sp"
					android:textColor="#000000"
					android:hint="Alarms Code"
					android:textColorHint="#607D8B"
					android:inputType="numberSigned" />
				<Switch
					android:id="@+id/switch_isRepeating"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="12dp"
					android:layout_marginTop="5dp"
					android:layout_marginRight="12dp"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					android:paddingBottom="8dp"
					android:background="#EFEBE9"
					android:gravity="left|center_vertical"
					android:text="Alarms for Repeating\?"
					android:textSize="16sp"
					android:textColor="#000000" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/materialbutton_set_alarms"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="12dp"
					android:layout_marginTop="5dp"
					android:layout_marginRight="12dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="ADD ALARM ⏰"
					android:textSize="12sp"
					android:textColor="#FFFFFF"
					android:layout_weight="1"
					app:cornerRadius="10dp" />
			</LinearLayout>
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recyclerview"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="8dp"
				tools:listitem="@layout/alarms_items" />
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
</LinearLayout>
